generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum State {
  ShoppingList
  Stock
  InUse
  Finished
}

model User {
  id            Int       @id @default(autoincrement())
  createdAt     DateTime  @default(now()) @db.DateTime(3)
  updatedAt     DateTime  @updatedAt @db.DateTime(3)
  email         String    @unique
  name          String
  biography     String?
  profilePhoto  String?
  bornDate      DateTime?
  stayLogged    Boolean   @default(false)
  stayLoggedKey String?
  activationKey String?   @default(uuid())
  deleteKey     String?   @default(uuid())
  active        Boolean   @default(false)
  cards         Card[]
}

model Card {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now()) @db.DateTime(3)
  updatedAt DateTime @updatedAt @db.DateTime(3)
  userId    Int
  thumb     String?
  name      String?
  brand     String?
  weight    String?
  color     String?
  model     String?
  validity  String?
  amount    String?
  state     State
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}
