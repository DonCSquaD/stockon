generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum State {
  ShoppingList
  Stock
  InUse
  Finished
}

model User {
  id           String    @id @default(uuid())
  createdAt    DateTime  @default(now()) @db.DateTime(3)
  updatedAt    DateTime  @updatedAt @db.DateTime(3)
  name         String?
  email        String    @unique
  password     String
  biography    String?
  profilePhoto String?
  bornDate     DateTime?
  cards        Card[]
}

model Card {
  id           Int      @id @default(autoincrement())
  createdAt    DateTime @default(now()) @db.DateTime(3)
  updatedAt    DateTime @updatedAt @db.DateTime(3)
  userId       String
  thumb        String?
  name         String
  brand        String?
  weight       String?
  color        String?
  validity     String?
  purchaseDate String?
  amount       String?
  state        State
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}
